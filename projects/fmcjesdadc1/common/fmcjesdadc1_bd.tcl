
source $ad_hdl_dir/library/jesd204/scripts/jesd204.tcl

# transceiver core

ad_xcvr_parameter number_of_lanes 4
ad_xcvr_parameter rx_lane_rate {5.0 Gbps}
ad_xcvr_parameter rx_ref_clk_frequency {250.000 MHz}
ad_xcvr_instance axi_fmcadc1_xcvr

# adc peripherals (jesd)

adi_axi_jesd204_rx_create axi_fmcadc1_jesd 4
create_bd_port -dir I rx_sysref
create_bd_port -dir O rx_sync
ad_connect rx_sysref axi_fmcadc1_jesd/sysref
ad_connect axi_fmcadc1_jesd/sync rx_sync
ad_connect axi_fmcadc1_xcvr_rx_core_clk axi_fmcadc1_jesd/device_clk
ad_connect axi_fmcadc1_jesd/phy_en_char_align axi_fmcadc1_xcvr/rxencommaalign

# adc peripherals (jesd-data split)

ad_ip_instance util_bsplit util_jesd_bsplit
ad_ip_parameter util_jesd_bsplit CONFIG.CHANNEL_DATA_WIDTH 64
ad_ip_parameter util_jesd_bsplit CONFIG.NUM_OF_CHANNELS 2
ad_connect axi_fmcadc1_jesd/rx_data_tdata util_jesd_bsplit/data

# adc peripherals (ad9250-core 0)

ad_ip_instance axi_ad9250 axi_ad9250_0_core
ad_connect axi_fmcadc1_xcvr_rx_core_clk axi_ad9250_0_core/rx_clk
ad_connect util_jesd_bsplit/split_data_0 axi_ad9250_0_core/rx_data
ad_connect axi_fmcadc1_jesd/rx_sof axi_ad9250_0_core/rx_sof

# adc peripherals (ad9250-core 1)

ad_ip_instance axi_ad9250 axi_ad9250_1_core
ad_connect axi_fmcadc1_xcvr_rx_core_clk axi_ad9250_1_core/rx_clk
ad_connect util_jesd_bsplit/split_data_1 axi_ad9250_1_core/rx_data
ad_connect axi_fmcadc1_jesd/rx_sof axi_ad9250_1_core/rx_sof

# adc peripherals (cpack 0)

ad_ip_instance util_cpack util_ad9250_0_cpack
ad_ip_parameter util_ad9250_0_cpack CONFIG.NUM_OF_CHANNELS 2
ad_connect axi_fmcadc1_xcvr_rx_core_clk util_ad9250_0_cpack/adc_clk
ad_connect axi_ad9250_0_core/adc_enable_a util_ad9250_0_cpack/adc_enable_0
ad_connect axi_ad9250_0_core/adc_valid_a util_ad9250_0_cpack/adc_valid_0
ad_connect axi_ad9250_0_core/adc_data_a util_ad9250_0_cpack/adc_data_0
ad_connect axi_ad9250_0_core/adc_enable_b util_ad9250_0_cpack/adc_enable_1
ad_connect axi_ad9250_0_core/adc_valid_b util_ad9250_0_cpack/adc_valid_1
ad_connect axi_ad9250_0_core/adc_data_b util_ad9250_0_cpack/adc_data_1
ad_connect util_ad9250_0_cpack/adc_rst GND

# adc peripherals (cpack 1)

ad_ip_instance util_cpack util_ad9250_1_cpack
ad_ip_parameter util_ad9250_1_cpack CONFIG.NUM_OF_CHANNELS 2
ad_connect axi_fmcadc1_xcvr_rx_core_clk util_ad9250_1_cpack/adc_clk
ad_connect axi_ad9250_1_core/adc_enable_a util_ad9250_1_cpack/adc_enable_0
ad_connect axi_ad9250_1_core/adc_valid_a util_ad9250_1_cpack/adc_valid_0
ad_connect axi_ad9250_1_core/adc_data_a util_ad9250_1_cpack/adc_data_0
ad_connect axi_ad9250_1_core/adc_enable_b util_ad9250_1_cpack/adc_enable_1
ad_connect axi_ad9250_1_core/adc_valid_b util_ad9250_1_cpack/adc_valid_1
ad_connect axi_ad9250_1_core/adc_data_b util_ad9250_1_cpack/adc_data_1
ad_connect util_ad9250_1_cpack/adc_rst GND

# adc peripherals (dma 0)

ad_ip_instance axi_dmac axi_ad9250_0_dma
ad_ip_parameter axi_ad9250_0_dma CONFIG.DMA_TYPE_SRC 2
ad_ip_parameter axi_ad9250_0_dma CONFIG.DMA_TYPE_DEST 0
ad_ip_parameter axi_ad9250_0_dma CONFIG.ID 0
ad_ip_parameter axi_ad9250_0_dma CONFIG.AXI_SLICE_SRC 0
ad_ip_parameter axi_ad9250_0_dma CONFIG.AXI_SLICE_DEST 0
ad_ip_parameter axi_ad9250_0_dma CONFIG.SYNC_TRANSFER_START 1
ad_ip_parameter axi_ad9250_0_dma CONFIG.DMA_LENGTH_WIDTH 24
ad_ip_parameter axi_ad9250_0_dma CONFIG.DMA_2D_TRANSFER 0
ad_ip_parameter axi_ad9250_0_dma CONFIG.CYCLIC 0
ad_ip_parameter axi_ad9250_0_dma CONFIG.DMA_DATA_WIDTH_SRC 64
ad_ip_parameter axi_ad9250_0_dma CONFIG.DMA_DATA_WIDTH_DEST 64
ad_connect axi_fmcadc1_xcvr_rx_core_clk axi_ad9250_0_dma/fifo_wr_clk
ad_connect util_ad9250_0_cpack/adc_valid axi_ad9250_0_dma/fifo_wr_en
ad_connect util_ad9250_0_cpack/adc_sync axi_ad9250_0_dma/fifo_wr_sync
ad_connect util_ad9250_0_cpack/adc_data axi_ad9250_0_dma/fifo_wr_din
ad_connect axi_ad9250_0_dma/fifo_wr_overflow axi_ad9250_0_core/adc_dovf
ad_connect sys_cpu_resetn axi_ad9250_0_dma/m_dest_axi_aresetn

# adc peripherals (dma 1)

ad_ip_instance axi_dmac axi_ad9250_1_dma
ad_ip_parameter axi_ad9250_1_dma CONFIG.DMA_TYPE_SRC 2
ad_ip_parameter axi_ad9250_1_dma CONFIG.DMA_TYPE_DEST 0
ad_ip_parameter axi_ad9250_1_dma CONFIG.ID 0
ad_ip_parameter axi_ad9250_1_dma CONFIG.AXI_SLICE_SRC 0
ad_ip_parameter axi_ad9250_1_dma CONFIG.AXI_SLICE_DEST 0
ad_ip_parameter axi_ad9250_1_dma CONFIG.SYNC_TRANSFER_START 1
ad_ip_parameter axi_ad9250_1_dma CONFIG.DMA_LENGTH_WIDTH 24
ad_ip_parameter axi_ad9250_1_dma CONFIG.DMA_2D_TRANSFER 0
ad_ip_parameter axi_ad9250_1_dma CONFIG.CYCLIC 0
ad_ip_parameter axi_ad9250_1_dma CONFIG.DMA_DATA_WIDTH_SRC 64
ad_ip_parameter axi_ad9250_1_dma CONFIG.DMA_DATA_WIDTH_DEST 64
ad_connect axi_fmcadc1_xcvr_rx_core_clk axi_ad9250_1_dma/fifo_wr_clk
ad_connect util_ad9250_1_cpack/adc_valid axi_ad9250_1_dma/fifo_wr_en
ad_connect util_ad9250_1_cpack/adc_sync axi_ad9250_1_dma/fifo_wr_sync
ad_connect util_ad9250_1_cpack/adc_data axi_ad9250_1_dma/fifo_wr_din
ad_connect axi_ad9250_1_dma/fifo_wr_overflow axi_ad9250_1_core/adc_dovf
ad_connect sys_cpu_resetn axi_ad9250_1_dma/m_dest_axi_aresetn

# core clock port

create_bd_port -dir O rx_core_clk
ad_connect axi_fmcadc1_xcvr_rx_core_clk rx_core_clk

# interconnect (cpu)

ad_cpu_interconnect 0x44A60000 axi_fmcadc1_xcvr
ad_cpu_interconnect 0x44AA0000 axi_fmcadc1_jesd
ad_cpu_interconnect 0x44A10000 axi_ad9250_0_core
ad_cpu_interconnect 0x44A20000 axi_ad9250_1_core
ad_cpu_interconnect 0x7c420000 axi_ad9250_0_dma
ad_cpu_interconnect 0x7c430000 axi_ad9250_1_dma

# interconnect (adc)

ad_mem_hp2_interconnect sys_200m_clk sys_ps7/S_AXI_HP2
ad_mem_hp2_interconnect sys_200m_clk axi_ad9250_0_dma/m_dest_axi
ad_mem_hp2_interconnect sys_200m_clk axi_ad9250_1_dma/m_dest_axi

#interrupts

ad_cpu_interrupt ps-11 mb-14 axi_fmcadc1_jesd/irq
ad_cpu_interrupt ps-12 mb-12 axi_ad9250_1_dma/irq
ad_cpu_interrupt ps-13 mb-13 axi_ad9250_0_dma/irq

